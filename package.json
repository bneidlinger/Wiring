{
  "name": "wiringdiagrams",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npx vite",
    "build": "npx vite build",
    "preview": "npx vite preview",
    "test": "npm run test:unit && npm run test:visual && npm run test:e2e",
    "test:unit": "jest",
    "test:visual": "playwright test tests/visual/",
    "test:visual:update": "playwright test tests/visual/ --update-snapshots",
    "test:e2e": "playwright test tests/e2e/",
    "test:perf": "node tests/performance/runner.js",
    "test:a11y": "playwright test tests/accessibility/",
    "test:cross-browser": "wdio run tests/cross-browser/wdio.conf.js",
    "test:memory": "node tests/memory/leak-detector.js",
    "test:load": "node tests/load/stress-test.js",
    "test:visual:percy": "percy exec -- playwright test tests/visual/",
    "test:visual:backstop": "backstop test",
    "test:visual:backstop:approve": "backstop approve",
    "test:ci": "concurrently \"npm:test:unit\" \"npm:test:visual\" \"npm:test:e2e\" \"npm:test:a11y\"",
    "coverage": "jest --coverage",
    "lighthouse": "lighthouse http://localhost:5173 --output html --output-path ./test-results/lighthouse.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "canvg": "^4.0.3",
    "interact.js": "^1.2.8",
    "jspdf": "^3.0.1",
    "svg-pan-zoom": "^3.6.2",
    "svg2pdf.js": "^2.5.0"
  },
  "devDependencies": {
    "vite": "^5.4.19",
    "@playwright/test": "^1.40.0",
    "@percy/playwright": "^1.0.0",
    "jest": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/dom": "^9.3.3",
    "jsdom": "^23.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "puppeteer": "^21.6.0",
    "axe-core": "^4.8.0",
    "@axe-core/playwright": "^4.8.0",
    "memlab": "^1.1.0",
    "jest-image-snapshot": "^6.2.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "backstopjs": "^6.2.2",
    "chromatic": "^10.0.0",
    "webdriverio": "^8.24.0",
    "@wdio/cli": "^8.24.0",
    "@wdio/local-runner": "^8.24.0",
    "@wdio/mocha-framework": "^8.24.0",
    "@wdio/spec-reporter": "^8.24.0",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.0"
  }
}
